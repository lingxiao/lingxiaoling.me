mixin article(title, month, date, year, src, abstract)
	
	//- article class
	article.eventlist-event.eventlist-event--upcoming.eventlist-event--hasimg.eventlist-hasimg.eventlist-event--multiday
		a.eventlist-column-thumbnail.content-fill
			//- load image
			img.eventlist-thumbnail(data-src=`${src}`, data-image=`${src}`, data-image-dimensions='', data-image-focal-point='0.5,0.5')
			//- load date
			a.eventlist-column-date(href="/workshops-shibori/2016/5/4/shibori-101")
				.eventlist-datetag
					.eventlist-datetag-inner
						.eventlist-datetag-startdate.eventlist-datetag-startdate--month #{month}
						.eventlist-datetag-startdate.eventlist-datetag-startdate--day #{date}
						.eventlist-datetag-enddate #{year}
		//- load title and abstract
		.eventlist-column-info
			h1.eventlist-title
				a.eventlist-title-link(href="/workshops-shibori/2016/5/4/shibori-101") #{title}
			ul.eventlist-meta.event-meta
				li.eventlist-meta-item.eventlist-meta-date.event-meta-item
					//- 
					//- note override existing style to fit my template design
					time.event-date(datetime='', style='font-family: Arial, Helvetica; letter-spacing: 0px; font-weight: normal; font-style: normal; font-size: 14.6667px; line-height:1.2')
						| #{abstract}
	.clear
