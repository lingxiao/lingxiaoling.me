mixin article(title, month, date, year, img_src, link, abstract)

	//- article class
	article.eventlist-event.eventlist-event--upcoming.eventlist-event--hasimg.eventlist-hasimg.eventlist-event--multiday
		a.eventlist-column-thumbnail.content-fill(href=`${link}`)

			//- wrote my own div so that image loads on page load instead of on refresh
			//- TODO: this one does not fill in height wise
			//- img(src=`${img_src}`, alt=`${img_src}`, style='position: static; float:left; width: 100%; object-fit: cover')

			//- original one does not load unless page refresh
			img.eventlist-thumbnail-xiao(data-src=`${img_src}`, data-image=`${img_src}`, data-image-dimensions='', data-image-focal-point='0.5,0.5')

			//- load date
			a.eventlist-column-date(href=`${link}`)
				.eventlist-datetag
					.eventlist-datetag-inner
						.eventlist-datetag-startdate.eventlist-datetag-startdate--month #{month}
						.eventlist-datetag-startdate.eventlist-datetag-startdate--day #{date}
						.eventlist-datetag-enddate #{year}
		//- load title and abstract
		.eventlist-column-info
			h1.eventlist-title
				a.eventlist-title-link(href=`${link}`) #{title}
				//- problem: right now the line height is changing as wanted, but the font is
				//- #block-yui_3_17_2_1_1521598810432_30584.sqs-block.html-block.sqs-block-html(data-block-type='2')
					.sqs-block-content(style='font-size: 18px; color:gray; font-style: normal; font-weight: normal')
						| #{abstract}

				#block-yui_3_17_2_1_1521598810432_30584.sqs-block.html-block.sqs-block-html(data-block-type='2')
					.sqs-block-content(style='font-family: Arial, Helvetica; font-weight: normal; font-style: normal; font-size: 14.6667px; color:gray')
						| #{abstract}

			//- ul.eventlist-meta.event-meta
				li.eventlist-meta-item.eventlist-meta-date.event-meta-item
					//- 
					//- note override existing style to fit my template design
					//- time.event-date(datetime='', style='font-family: Arial, Helvetica; letter-spacing: 0px; font-weight: normal; font-style: normal; font-size: 14.6667px; line-height:1.2; font-color: black')(href=`${link}`)
					//- .sqs-block-content
						| #{abstract}

					//- time.event-date(datetime='', style='font-family: Arial, Helvetica; letter-spacing: 0px; font-weight: normal; font-style: normal; font-size: 14px; line-height:1.2; color:#FF0000')(href=`${link}`)
						| #{abstract}
	.clear
